{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for your resources"
            }
        },
        "appServicePlanName": {
            "type": "string",
            "metadata": {
                "description": "Name of the App Service Plan"
            }
        },
        "webAppFrontEndName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Web App"
            }
        },
        "resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Resource Group"
            }
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Key Vault"
            }
        },
        "keyVaultSku": {
            "type": "string",
            "defaultValue": "standard",
            "allowedValues": [
                "standard",
                "premium"
            ],
            "metadata": {
                "description": "SKU of the Key Vault"
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "Tenant ID for Subscription"
            }
        },
        "secretsPermissions": {
            "type": "array",
            "defaultValue": [
                "get",
                "list"
            ]
        },
        "ServiceConnection": {
            "type": "string",
            "metadata": {
                "description": "Who has access to create certificate"
            }
        },
        "createCertificatePermissions": {
            "type": "array",
            "metadata": {
                "description": "Service Connection to create certificate in key vault for frontEndWebApp custom domain"
            }
        },
        "createSecretPermissions": {
            "type": "array",
            "metadata": {
                "description": "Service Connection to create SAS token and store in key vault"
            }
        },
        "frontendCertificatePermissions": {
            "type": "array",
            "defaultValue": [
                "get",
                "list"
            ]
        }
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2023-07-01",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "[parameters('keyVaultSku')]"
                },
                "tenantId": "[parameters('tenantId')]",
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('tenantId')]",
                        "objectId": "[reference(concat('Microsoft.Web/sites/', parameters('webAppFrontEndName')), '2022-09-01','Full').identity.principalId]",
                        "permissions": {
                            "secrets": "[parameters('secretsPermissions')]"
                        }
                    },
                    {
                        "tenantId": "[parameters('tenantId')]",
                        "objectId": "[parameters('ServiceConnection')]",
                        "permissions": {
                            "certificates": "[parameters('createCertificatePermissions')]",
                            "secrets": "[parameters('createSecretPermissions')]"
                        }
                    },
                    {
                        "tenantId": "[parameters('tenantId')]",
                        "objectId": "[reference(concat('Microsoft.Web/sites/', parameters('webAppFrontEndName')), '2022-09-01', 'Full').identity.principalId]",
                        "permissions": {
                            "certificates": "[parameters('frontendCertificatePermissions')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-06-01",
            "name": "[parameters('appServicePlanName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "B1",
                "tier": "Basic",
                "capacity": 1
            },
            "properties": {},
            "tags": {
                "environment": "development",
                "project": "webapp"
            }
        },
        {
            "name": "[parameters('webAppFrontEndName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-09-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
            ],
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
            }
        }
    ],
    "outputs": {
        "webAppUrl": {
            "type": "string",
            "value": "[reference(parameters('webAppFrontEndName')).defaultHostName]"
        }
    }
}
